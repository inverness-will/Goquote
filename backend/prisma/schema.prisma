generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OtpPurpose {
  EMAIL_VERIFICATION
  PASSWORD_RESET
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  fullName        String
  passwordHash    String
  isEmailVerified Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  otpCodes        OtpCode[]
}

model OtpCode {
  id         String     @id @default(cuid())
  userId     String
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  codeHash   String
  purpose    OtpPurpose
  expiresAt  DateTime
  consumedAt DateTime?
  createdAt  DateTime   @default(now())

  @@index([userId, purpose, createdAt])
}
